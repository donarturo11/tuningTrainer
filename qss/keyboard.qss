KeyButton {
    text-align: bottom; 
    font-size: 30px;
}

*[semitoneKey=false] {
    color: #000000;
    background: #ffffff;    
}

*[semitoneKey=false]:pressed {
    color: #101010;
    background: #c0c0c0;    
}

*[semitoneKey=true] {
    color: #ffffff;
    background: #000000;
}

*[semitoneKey=true]:pressed {
    color: #c0c0c0;
    background: #404040;
}

KeyButton[semitoneKey=false] {
    width: 72;
    height: 140;
}

KeyButton[semitoneKey=true] {
    width: 48;
    height: 70;
}